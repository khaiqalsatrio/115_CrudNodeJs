<div class="card text-center" style="width: 18rem; margin: auto; margin-top: 50px; padding: 20px;">
    <div class="card-body">
        <div class="mb-3">
            <!-- Gambar berbentuk lingkaran -->
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg" alt="GitHub Logo" class="rounded-circle mx-auto d-block" style="width: 100px; height: 100px; object-fit: cover;">
        </div>
        <h5 class="card-title">Signup</h5>
        <form action="/signup" method="POST">
            <div class="mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <p class="mt-3">login <a href="/login">Login di sini</a>.</p>
            <button type="submit" class="btn btn-primary">Daftar</button>
        </form>
    </div>
</div>
